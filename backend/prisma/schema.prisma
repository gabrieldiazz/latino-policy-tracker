generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  bills     UserBill[]
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Will only collect Latino relevant bills
model Bill {
  id                  String    @id @default(uuid())
  billNumber          Int       @unique
  billType            String
  congress            Int
  title               String
  status              Status    @default(INTRODUCED)
  introducedDate      DateTime
  summary             String?
  updateDate          DateTime?
  policyArea          String
  legislativeSubjects String[]
  users               UserBill[]
  relevancy           Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  actions    Action[]
  sponsors   Sponsor[]
  committees Committee[]
}

// establishes many-to-many relationship between users and bills
model UserBill{
  user User @relation(fields: [userId], references: [id]) 
  userId String
  bill  Bill @relation(fields: [billId], references: [id])
  billId String
  assignedAt DateTime @default(now())

  @@id([userId, billId])
}

model Action {
  id           String   @id @default(uuid())
  billId       String
  latestAction String
  actionDate   DateTime
  bill         Bill     @relation(fields: [billId], references: [id])
}

model Sponsor {
  id        String      @id @default(uuid())
  billId    String
  fullName  String
  firstName String
  lastName  String
  party     String
  state     String
  district  String?
  role      SponsorRole
  bill      Bill        @relation(fields: [billId], references: [id])
}

model Committee {
  id      String @id @default(uuid())
  billId  String
  name    String
  chamber String
  bill    Bill   @relation(fields: [billId], references: [id])
}

enum SponsorRole {
  SPONSOR
  COSPONSOR
}

enum Status {
  INTRODUCED
  PASSED_HOUSE
  PASSED_SENATE
  TO_PRESIDENT
  VETOED
  OVERRIDDEN
  BECAME_LAW
  FAILED
}
