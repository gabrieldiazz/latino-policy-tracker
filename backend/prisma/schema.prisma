generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  bills     UserBill[]
  firstName String?
  lastName  String?
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

// Will only collect Latino relevant bills
model Bill {
  id                  String        @id @default(uuid())
  billNumber          Int
  billType            String
  congress            Int
  title               String
  status              Status        @default(INTRODUCED)
  introducedDate      DateTime
  summary             String?
  updateDate          DateTime?
  policyArea          String
  legislativeSubjects BillSubject[]
  users               UserBill[]
  relevancy           Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  actions    Action[]
  sponsors   BillSponsor[]
  committees BillCommittee[]

  @@unique([billNumber, billType, congress])
  @@index([congress])
  @@index([status])
  @@index([billType])
}

// establishes many-to-many relationship between users and bills
model UserBill {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  bill       Bill     @relation(fields: [billId], references: [id])
  billId     String
  assignedAt DateTime @default(now())

  @@id([userId, billId])
}

model Sponsor {
  id        String        @id @default(uuid())
  fullName  String
  firstName String
  lastName  String
  party     String
  state     String
  district  String?
  role      SponsorRole
  bills     BillSponsor[]
}

// establishes many-to-many relationship between bills and sponsors
model BillSponsor {
  sponsor   Sponsor @relation(fields: [sponsorId], references: [id])
  sponsorId String
  bill      Bill    @relation(fields: [billId], references: [id])
  billId    String

  @@id([sponsorId, billId])
}

// one-to-many relationship between bills and actions
model Action {
  id         String   @id @default(uuid())
  billId     String
  text       String
  type       String
  actionDate DateTime
  bill       Bill     @relation(fields: [billId], references: [id])
}

model Committee {
  id      String          @id @default(uuid())
  name    String
  chamber String
  bills   BillCommittee[]

  @@unique([name, chamber])
}

// establishes many-to-many relationship between bills and committees 
model BillCommittee {
  committee   Committee @relation(fields: [committeeId], references: [id])
  committeeId String
  bill        Bill      @relation(fields: [billId], references: [id])
  billId      String

  @@id([committeeId, billId])
}

model Subject {
  id    String        @id @default(uuid())
  name  String        @unique
  bills BillSubject[]
}

model BillSubject {
  subjects   Subject @relation(fields: [subjectsId], references: [id])
  subjectsId String
  bill       Bill    @relation(fields: [billId], references: [id])
  billId     String

  @@id([subjectsId, billId])
}

enum SponsorRole {
  SPONSOR
  COSPONSOR
}

enum Status {
  INTRODUCED
  PASSED_HOUSE
  PASSED_SENATE
  RESOLVING_DIFFERENCES
  TO_PRESIDENT
  VETOED
  BECAME_LAW
  FAILED_HOUSE
  FAILED_SENATE
}
